<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialerMobile.Views.ConnectionDetailPage"
             Title="Connection Detail">

    <StackLayout Spacing="20" Padding="15">
        <Entry Placeholder="Name" ClearButtonVisibility="WhileEditing" IsSpellCheckEnabled="false"/>
        <Entry Placeholder="Rating" Keyboard="Numeric" IsSpellCheckEnabled="false"/>
        <Entry Placeholder="Target Rating" Keyboard="Numeric" IsSpellCheckEnabled="false"/>
        <Entry Placeholder="Note" ClearButtonVisibility="WhileEditing"/>
        <Label Text="Event"/>
    </StackLayout>
    
</ContentPage>
